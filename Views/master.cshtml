@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Master>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = null;
    var Homenode = Model.Root();
    var GlobalSetting = Homenode.FirstChild<SettingFolder>().FirstChild<GlobalSetting>() as GlobalSetting;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>@Model.PageTitle</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="@Model.OGtitle" />
    <meta property="og:type" content="@Model.OGtype" />
    <meta property="og:description" content="@Model.MetaDescription" />
    <meta property="og:url" content="@Model.OGurl" />
    <meta property="og:image" content="@(Model.OGimage!=null?Model.OGimage.Url:string.Empty)">
    <meta property="og:image:alt" content="@Model.OGimageAlt" />
    <meta property="og:image:width" content="300" />
    <meta property="og:image:height" content="300" />
    <meta name="Keywords" content="@Model.MetaKeyword" />
    <meta name="description" content="@Model.MetaDescription" />


    <link rel="shortcut icon" type="image/x-icon" href="@(GlobalSetting.Favicon!=null?GlobalSetting.Favicon.Url:string.Empty)" />
    <!-- bootstrap 4 link -->
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">

    <!-- stylesheet link -->
    <link rel="stylesheet" type="text/css" href="/css/homepage-style.css">
    <link rel="stylesheet" type="text/css" href="/css/inner-style.css">
    <link href="/css/form.css" rel="stylesheet" />
    <!-- Responsive stylesheet link -->
    <link rel="stylesheet" type="text/css" href="/css/responsive.css">


    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">

    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Muli:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- jquery script-->
    <script src="/scripts/jquery.min.js"></script>
    @if (!string.IsNullOrEmpty(GlobalSetting.GoogleHeadTagScript))
    {
        @Html.Raw(GlobalSetting.GoogleHeadTagScript)
    }
</head>
<body>
    @if (!string.IsNullOrEmpty(GlobalSetting.GoogleBodyTagScript))
    {
        @Html.Raw(GlobalSetting.GoogleBodyTagScript)
    }
    @Html.Partial("Header")
    @RenderBody()
    @Html.Partial("Footer")
    <div class="loader loading-div" style="display: none;"></div>
    <div class="loader loading-img" style="display: none;">
        <img src="/images/loader.gif" />
    </div>


    <!-- bootstrap 4 jquery script-->

    <script src="/scripts/bootstrap.min.js"></script>
    <!-- bootstrap 4 jquery popper script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>


    <script>
        var vid = document.getElementById("myVideo");
        function playVid() {
            vid.play();
        }
        function pauseVid() {
            vid.pause();
        }

    </script>
</body>
</html>

